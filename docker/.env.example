# MATLAB Engine API Environment Configuration
# Copy to .env and customize for your environment

# Application Configuration
ENVIRONMENT=production
VERSION=latest
LOG_LEVEL=INFO

# Service Configuration
API_PORT=8000
WORKERS=4
TIMEOUT=300

# Resource Limits
CPU_LIMIT=2.0
MEMORY_LIMIT=4G
CPU_RESERVATION=0.5
MEMORY_RESERVATION=1G

# Python and MATLAB Versions
PYTHON_VERSION=3.11
MATLAB_VERSION=R2023b

# Database Configuration (if using PostgreSQL)
POSTGRES_DB=matlab_engine
POSTGRES_USER=matlab_user
POSTGRES_PASSWORD=secure_password_change_me

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=secure_admin_password

# Proxy Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Security Settings
# Generate strong passwords and change default values
SECRET_KEY=your_secret_key_here_change_me
ENCRYPT_KEY=your_encryption_key_here_change_me

# External Services (if applicable)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password

# Cloud Storage (if applicable)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_REGION=us-west-2
# S3_BUCKET=matlab-engine-data

# Monitoring and Logging
# DATADOG_API_KEY=your_datadog_key
# SENTRY_DSN=your_sentry_dsn
# LOG_LEVEL=INFO

# Development Settings (development environment only)
# DEV_MODE=true
# DEBUG=true
# RELOAD=true